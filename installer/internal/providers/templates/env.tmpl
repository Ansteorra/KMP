# KMP Configuration â€” Generated by kmp installer
# Edit with: kmp config

# Application
APP_NAME=KMP
DEBUG=false
REQUIRE_HTTPS={{if .RequireHttps}}true{{else}}false{{end}}
SECURITY_SALT={{.SecuritySalt}}
KMP_DEPLOY_PROVIDER=docker

# Database
{{if eq .DatabaseType "bundled"}}
MYSQL_ROOT_PASSWORD={{.DBRootPassword}}
MYSQL_DB_NAME=kmp
MYSQL_USERNAME=kmpuser
MYSQL_PASSWORD={{.DBPassword}}
DATABASE_URL=mysql://kmpuser:{{.DBPassword}}@db:3306/kmp
{{else}}
DATABASE_URL={{.DatabaseDSN}}
{{end}}

# Email
EMAIL_FROM={{.EmailFrom}}
EMAIL_SMTP_HOST={{.SMTPHost}}
EMAIL_SMTP_PORT={{.SMTPPort}}
EMAIL_SMTP_USERNAME={{.SMTPUser}}
EMAIL_SMTP_PASSWORD={{.SMTPPass}}

# Storage
DOCUMENT_STORAGE_ADAPTER={{if .StorageType}}{{.StorageType}}{{else}}local{{end}}
{{if eq .StorageType "azure"}}
AZURE_STORAGE_CONNECTION_STRING={{.AzureConnectionString}}
AZURE_STORAGE_CONTAINER={{.AzureContainer}}
{{end}}
{{if eq .StorageType "s3"}}
AWS_S3_BUCKET={{.S3Bucket}}
AWS_DEFAULT_REGION={{.S3Region}}
{{if .S3Key}}AWS_ACCESS_KEY_ID={{.S3Key}}
{{end}}{{if .S3Secret}}AWS_SECRET_ACCESS_KEY={{.S3Secret}}
{{end}}{{if .S3Endpoint}}AWS_S3_ENDPOINT={{.S3Endpoint}}
{{end}}{{end}}
