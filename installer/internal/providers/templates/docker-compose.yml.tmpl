# KMP Production Stack — Generated by kmp installer
# DO NOT edit manually — use `kmp config` instead

services:
  app:
    image: {{.Image}}:{{.ImageTag}}
    container_name: kmp-app
    restart: unless-stopped
{{if eq .DatabaseType "bundled"}}
    depends_on:
      db:
        condition: service_healthy
{{end}}
    ports:
      - "127.0.0.1:8080:80"
    volumes:
      - kmp-uploads:/var/www/html/images/uploaded
      - kmp-cache:/var/www/html/images/cache
      - kmp-logs:/var/www/html/logs
      - kmp-tmp:/var/www/html/tmp
    env_file:
      - .env
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 300s
{{if eq .DatabaseType "bundled"}}
  db:
    image: mariadb:11
    container_name: kmp-db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: ${MYSQL_DB_NAME}
      MYSQL_USER: ${MYSQL_USERNAME}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    volumes:
      - kmp-db-data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 60s
{{end}}
  caddy:
    image: caddy:2-alpine
    container_name: kmp-caddy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy-data:/data
      - caddy-config:/config
    depends_on:
      app:
        condition: service_started

volumes:
  kmp-uploads:
  kmp-cache:
  kmp-logs:
  kmp-tmp:
  caddy-data:
  caddy-config:
{{if eq .DatabaseType "bundled"}}
  kmp-db-data:
{{end}}
