# KMP Production Stack — Generated by kmp installer
# DO NOT edit manually — use `kmp config` instead

services:
  app:
    image: {{.Image}}:{{.ImageTag}}
    container_name: kmp-app
    restart: unless-stopped
{{if or (ne .DatabaseType "external") .UseRedis}}
    depends_on:
{{if ne .DatabaseType "external"}}
      db:
        condition: service_healthy
{{end}}
{{if .UseRedis}}
      redis:
        condition: service_healthy
{{end}}
{{end}}
    volumes:
      - kmp-uploads:/var/www/html/images/uploaded
      - kmp-cache:/var/www/html/images/cache
      - kmp-logs:/var/www/html/logs
      - kmp-tmp:/var/www/html/tmp
    env_file:
      - .env
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost/health"]
      interval: 30s
      timeout: 10s
      retries: 5
      start_period: 300s
{{if eq .DatabaseType "bundled-mariadb"}}
  db:
    image: mariadb:11
    container_name: kmp-db
    restart: unless-stopped
    environment:
      MYSQL_ROOT_PASSWORD: ${MYSQL_ROOT_PASSWORD}
      MYSQL_DATABASE: ${MYSQL_DB_NAME}
      MYSQL_USER: ${MYSQL_USERNAME}
      MYSQL_PASSWORD: ${MYSQL_PASSWORD}
    volumes:
      - kmp-db-data:/var/lib/mysql
    healthcheck:
      test: ["CMD", "healthcheck.sh", "--connect", "--innodb_initialized"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 60s
{{end}}
{{if eq .DatabaseType "bundled-postgres"}}
  db:
    image: postgres:16-alpine
    container_name: kmp-db
    restart: unless-stopped
    environment:
      POSTGRES_DB: ${POSTGRES_DB}
      POSTGRES_USER: ${POSTGRES_USER}
      POSTGRES_PASSWORD: ${POSTGRES_PASSWORD}
    volumes:
      - kmp-db-data:/var/lib/postgresql/data
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U ${POSTGRES_USER} -d ${POSTGRES_DB}"]
      interval: 10s
      timeout: 5s
      retries: 10
      start_period: 30s
{{end}}
{{if .UseRedis}}
  redis:
    image: redis:7-alpine
    container_name: kmp-redis
    restart: unless-stopped
    command: redis-server --save 60 1 --loglevel warning{{if .RedisPassword}} --requirepass ${REDIS_PASSWORD}{{end}}
    volumes:
      - kmp-redis-data:/data
    healthcheck:
      test: ["CMD", "redis-cli", "ping"]
      interval: 10s
      timeout: 5s
      retries: 5
{{end}}
  caddy:
    image: caddy:2-alpine
    container_name: kmp-caddy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
    volumes:
      - ./Caddyfile:/etc/caddy/Caddyfile:ro
      - caddy-data:/data
      - caddy-config:/config
    depends_on:
      app:
        condition: service_started

volumes:
  kmp-uploads:
  kmp-cache:
  kmp-logs:
  kmp-tmp:
  caddy-data:
  caddy-config:
{{if ne .DatabaseType "external"}}
  kmp-db-data:
{{end}}
{{if .UseRedis}}
  kmp-redis-data:
{{end}}
