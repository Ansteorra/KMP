{
    "private": true,
    "scripts": {
        "dev": "npm run development",
        "development": "mix",
        "watch": "mix watch",
        "watch-poll": "mix watch -- --watch-options-poll=1000",
        "hot": "mix watch --hot",
        "prod": "npm run production",
        "production": "mix --production",
        "test": "npm run test:js && npm run test:ui",
        "test:js": "jest",
        "test:js:watch": "jest --watch",
        "test:js:coverage": "jest --coverage",
        "test:ui": "bddgen && playwright test",
        "test:ui:headed": "bddgen && playwright test --headed",
        "test:ui:debug": "bddgen && playwright test --debug",
        "test:ui:report": "playwright show-report tests/ui-reports/html --port 9324 --host 0.0.0.0",
        "test:ui:install": "playwright install",
        "test:security": "bash ../security-checker.sh"
    },
    "devDependencies": {
        "@babel/core": "^7.25.2",
        "@babel/preset-env": "^7.25.4",
        "@playwright/test": "^1.48.0",
        "@testing-library/jest-dom": "^6.5.0",
        "axios": "^1.7.4",
        "babel-jest": "^29.7.0",
        "cross-env": "^7.0",
        "exports-loader": "^5.0.0",
        "jest": "^29.7.0",
        "jest-environment-jsdom": "^29.7.0",
        "jsdom": "^25.0.1",
        "laravel-mix": "^6.0.3",
        "lodash": "^4.17.19",
        "playwright-bdd": "^8.2.1",
        "resolve-url-loader": "^5.0.0",
        "sass": "^1.20.1",
        "sass-loader": "^8.0.0",
        "webpack-cli": "^5.1.4"
    },
    "dependencies": {
        "@hotwired/stimulus": "^3.2.2",
        "@hotwired/turbo": "^8.0.4",
        "bootstrap": "^5.3.6",
        "guifier": "^1.0.32",
        "popper.js": "^1.16.1"
    },
    "browserslist": [
        "defaults"
    ]
}