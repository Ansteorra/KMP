<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         bootstrap="tests/bootstrap.php"
         cacheDirectory=".phpunit.cache"
         xsi:noNamespaceSchemaLocation="https://schema.phpunit.de/10.1/phpunit.xsd">
    <php>
        <ini name="memory_limit" value="-1"/>
        <ini name="apc.enable_cli" value="1"/>
    </php>

    <!-- Add any additional test suites you want to run here -->
    <testsuites>
        <!-- Fast-running unit/service coverage -->
        <testsuite name="core-unit">
            <directory>tests/TestCase/Core/Unit</directory>
            <directory>tests/TestCase/Model</directory>
            <directory>tests/TestCase/Services</directory>
            <directory>tests/TestCase/KMP</directory>
            <file>tests/TestCase/ApplicationTest.php</file>
        </testsuite>

        <!-- HTTP-oriented feature and controller tests -->
        <testsuite name="core-feature">
            <directory>tests/TestCase/Core/Feature</directory>
            <directory>tests/TestCase/Controller</directory>
            <directory>tests/TestCase/Command</directory>
            <directory>tests/TestCase/Middleware</directory>
            <directory>tests/TestCase/View</directory>
        </testsuite>

        <!-- New plugin harness plus plugin-owned suites -->
        <testsuite name="plugins">
            <directory>tests/TestCase/Plugins</directory>
            <directory>plugins/*/tests/TestCase</directory>
        </testsuite>

        <!-- Complete regression suite -->
        <testsuite name="all">
            <directory>tests/TestCase</directory>
            <directory>plugins/*/tests/TestCase</directory>
        </testsuite>
    </testsuites>

    <!-- Ignore vendor tests in code coverage reports -->
    <source>
        <include>
            <directory suffix=".php">src/</directory>
            <directory suffix=".php">plugins/*/src/</directory>
        </include>
        <exclude>
            <file>src/Console/Installer.php</file>
        </exclude>
    </source>
</phpunit>
