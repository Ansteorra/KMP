# KMP Production Configuration
# Copy to .env and customize: cp .env.example .env

# === Required ===

# Domain name (used for SSL certificate)
DOMAIN=localhost

# Image tag (release channel: latest, beta, dev, nightly)
KMP_IMAGE_TAG=latest

# Security salt (generate with: openssl rand -hex 32)
SECURITY_SALT=CHANGE_ME_GENERATE_WITH_openssl_rand_hex_32

# Database passwords (generate with: openssl rand -base64 24)
MYSQL_ROOT_PASSWORD=CHANGE_ME
MYSQL_PASSWORD=CHANGE_ME

# === Optional ===

# Database
MYSQL_DB_NAME=kmp
MYSQL_USERNAME=kmpuser
MYSQL_HOST=db

# Application
DEBUG=false
APP_NAME=KMP
KMP_DEPLOY_PROVIDER=docker

# Email (SMTP)
EMAIL_SMTP_HOST=
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=

# Document Storage (local, azure, s3)
DOCUMENT_STORAGE_ADAPTER=local
# AZURE_STORAGE_CONNECTION_STRING=
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# AWS_BUCKET=
